<Page x:Class="CaregiverMobile.Views.Elderly_RequestList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CaregiverMobile.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#E8EAF6">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="25"
                       Text="Pending Request List" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Caregiver Name"
                       TextWrapping="Wrap" />

            <Grid Grid.Column="1"
                  Width="1"
                  Background="Gray" />
            <TextBlock Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Relationship"
                       TextWrapping="Wrap" />
            <Grid Grid.Column="3"
                  Width="1"
                  Background="Gray" />
            <TextBlock Grid.Column="4"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Status"
                       TextWrapping="Wrap" />
        </Grid>

        <ProgressBar x:ConnectionId='1' Name="monitor_progressbar"
                     Grid.Row="2"
                     Height="10"
                     IsIndeterminate="True"
                     Visibility="Collapsed" />

        <Grid Grid.Row="3">
            <ListView x:ConnectionId='3' Name="RequestLvBinding"
                      Margin="0"
                      ItemsSource="{Binding}"
                                                           >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="4,0,4,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       Text="{Binding caregiverid.userfullname}"
                                       TextWrapping="Wrap" />

                            <Grid Grid.Column="1"
                                  Width="1"
                                  Background="Gray" />
                            <TextBlock Grid.Column="2"
                                       Margin="4,0,4,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       Text="{Binding relationship}"
                                       TextWrapping="Wrap" />
                            <Grid Grid.Column="3"
                                  Width="1"
                                  Background="Gray" />
                            <CheckBox Grid.Column="4"
                                      Margin="8"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      HorizontalContentAlignment="Center"
                                      IsChecked="{Binding requeststatus}"
                                      IsEnabled="False" />


                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                        <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <Button x:ConnectionId='2' Name="BackBtn"
                Grid.Row="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#5C6BC0"
                                     
                Content="Back"
                Foreground="White" />
    </Grid>
</Page>

