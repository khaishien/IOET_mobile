<Page
    x:Class="CaregiverMobile.Views.ElderlyPage_PositionLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CaregiverMobile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid Grid.Row="4">
            <Pivot>
                <PivotItem Header="Indoor">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="Timestamp"
                                                       TextWrapping="Wrap" />

                            <Grid Grid.Column="1"
                                                  Width="1"
                                                  Background="Gray" />
                            <TextBlock Grid.Column="2"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="Zone"
                                                       TextWrapping="Wrap" />
                        </Grid>


                        <Grid Grid.Row="1"
                                              Height="1"
                                              Background="Gray" />

                        <ProgressBar x:ConnectionId='3' Name="indoor_progressbar"
                                                     Grid.Row="2"
                                                     Height="10"
                                                     IsIndeterminate="True"
                                                     Visibility="Collapsed" />


                        <Grid Grid.Row="3">
                            <ListView x:ConnectionId='4' Name="IndoorLvBinding"
                                                      Margin="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                                       Margin="4,0,4,0"
                                                                       FontSize="10"
                                                                       Text="{Binding timestamp}"
                                                                       TextWrapping="Wrap" />

                                            <Grid Grid.Column="1"
                                                                  Width="1"
                                                                  Background="Gray" />
                                            <TextBlock Grid.Column="2"
                                                                       Margin="4,0,4,0"
                                                                       FontSize="10"
                                                                       Text="{Binding zoneid.locationname}"
                                                                       TextWrapping="Wrap" />

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                                        <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>


                    </Grid>
                </PivotItem>

                <PivotItem Margin="0" Header="Outdoor">


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="Timestamp"
                                                       TextWrapping="Wrap" />

                            <Grid Grid.Column="1"
                                                  Width="1"
                                                  Background="Gray" />
                            <TextBlock Grid.Column="2"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="Longtitude"
                                                       TextWrapping="Wrap" />
                            <Grid Grid.Column="3"
                                                  Width="1"
                                                  Background="Gray" />
                            <TextBlock Grid.Column="4"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Text="Latitude"
                                                       TextWrapping="Wrap" />
                        </Grid>

                        <Grid Grid.Row="1"
                                              Height="1"
                                              Background="Gray" />
                        <ProgressBar x:ConnectionId='1' Name="outdoor_progressbar"
                                                     Grid.Row="2"
                                                     Height="10"
                                                     IsIndeterminate="True"
                                                     Visibility="Collapsed" />
                        <Grid Grid.Row="3">
                            <ListView x:ConnectionId='2' Name="OutdoorLvBinding"
                                                      Margin="0"
                                                                                                          >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                                       Margin="4,0,4,0"
                                                                       FontSize="10"
                                                                       Text="{Binding timestamp}"
                                                                       TextWrapping="Wrap" />

                                            <Grid Grid.Column="1"
                                                                  Width="1"
                                                                  Background="Gray" />
                                            <TextBlock Grid.Column="2"
                                                                       Margin="4,0,4,0"
                                                                       FontSize="10"
                                                                       Text="{Binding longitude}"
                                                                       TextWrapping="Wrap" />
                                            <Grid Grid.Column="3"
                                                                  Width="1"
                                                                  Background="Gray" />
                                            <TextBlock Grid.Column="4"
                                                                       Margin="4,0,4,0"
                                                                       FontSize="10"
                                                                       Text="{Binding latitude}"
                                                                       TextWrapping="Wrap" />

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                                        <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>
                    </Grid>
                </PivotItem>
            </Pivot>

        </Grid>
        
    </Grid>
</Page>

