<Page x:ConnectionId='1' x:Class="CaregiverMobile.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:l="using:CaregiverMobile"
      xmlns:local="using:CaregiverMobile.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          
      mc:Ignorable="d">

    <UserControl.Resources>
        <l:VisibilityConverter x:Key="VisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='9' Name="menuBtn"
                    Height="48"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#5C6BC0"
                    BorderThickness="0"
                                         
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="White" />

            <!--<RadioButton Style="{StaticResource SplitViewMenuButtonStyle}"
                Click="OnMenuButtonClicked" />-->

            <Border Grid.Column="1" Background="#E8EAF6">
                <TextBlock x:ConnectionId='10' Name="Title"
                           Margin="12,0"
                           VerticalAlignment="Center"
                           FontSize="25"
                           Text="Elderly List" />
            </Border>
        </Grid>




        <SplitView x:ConnectionId='2' Name="splitview"
                   Grid.Row="1"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="260">

            <SplitView.Pane>
                <Grid Background="#E8EAF6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <Button x:ConnectionId='4' Name="homeBtn"
                                Height="48"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="#3F51B5"
                                BorderThickness="0"
                                                     
                                Foreground="White"
                                Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock HorizontalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE80F;" />
                                <TextBlock Grid.Column="1"
                                           Margin="12,0"
                                           Text="Home" />
                            </Grid>
                        </Button>

                        <Button x:ConnectionId='5' Name="profileBtn"
                                Height="48"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="#5C6BC0"
                                BorderThickness="0"
                                                        
                                Foreground="White"
                                Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock HorizontalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE77B;" />
                                <TextBlock Grid.Column="1"
                                           Margin="12,0"
                                           Text="Profile" />
                            </Grid>
                        </Button>

                    </StackPanel>

                    <StackPanel Grid.Row="1">

                        <Button x:ConnectionId='3' Name="settingsBtn"
                                Height="48"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="#5C6BC0"
                                BorderThickness="0"
                                                         
                                Foreground="White"
                                Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock HorizontalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE713;" />
                                <TextBlock Grid.Column="1"
                                           Margin="12,0"
                                           Text="Settings" />
                            </Grid>
                        </Button>
                    </StackPanel>

                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid x:ConnectionId='6' Name="load_elderly_progressbar"
                          Grid.Row="0"
                          Visibility="Collapsed">
                        <ProgressBar Height="10" IsIndeterminate="True" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <ListView x:ConnectionId='7' Name="ElderlyLvBinding" Margin="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Button x:ConnectionId='8' Height="160"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Stretch"
                                                                           
                                                CommandParameter="{Binding Path=_id}"
                                                Padding="0">

                                            <Grid VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1.5*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="3*" />
                                                </Grid.RowDefinitions>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.RowSpan="3"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Source="{Binding elderlyid.userprofilepic}"
                                                       Stretch="Fill" />

                                                <Grid Grid.Row="2" 
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch"
                                                      Background="#4D111111">
                                                    
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="2*" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0"
                                                               Margin="12,0,0,0"
                                                               HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Center"
                                                               FontSize="25"
                                                               Foreground="Black"
                                                               Text="{Binding elderlyid.userfullname}" />

                                                    <!--  indoor and outdoor  -->

                                                    <TextBlock Grid.Row="1"
                                                               Margin="12,0,0,0"
                                                               HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Center"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"
                                                               Foreground="{Binding statuscolor}"
                                                               Text="{Binding status}"/>


                                                </Grid>


                                            </Grid>

                                        </Button>
                                        <Grid Grid.Column="1"
                                                      Width="10"
                                                      Background="Red"
                                                      Visibility="{Binding Path=elderlyid.alertstring}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                    
